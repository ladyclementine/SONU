  <div class="row">
    <div class="col-md-12">
      <div class="card-box">
       <div class="dropdown pull-right">

        <%= link_to 'Adicionar cargo', new_crew_office_path, class: 'btn btn-primary' %>
      </div>
      <h4 class="header-title m-t-0 m-b-30">Cargos</h4>
      <table  class="table m-0">
        <thead>
         <tr>
          <th>Nome</th>
          <th>Cargo da página</th>
          <th>Configurações</th>
        </tr>
      </thead>
      <tbody>
        <% @crew_offices.each do |crew_office| %>
       <tr>
         <td><%= crew_office.name %></td>
         <% if crew_office.is_secretary == true %>
              <td>O secretariado</td>
         <% else %>
              <td> A diretoria</td>
        <% end %>

         <td><%= link_to crew_office_path(crew_office) do %><button data-toggle="tooltip" data-placement="left" title="Ver mais" class="btn btn-icon waves-effect waves-light btn-primary m-b-5 __web-inspector-hide-shortcut__"> <i class="fa fa-eye"></i></button><% end %>
           <%=  link_to   edit_crew_office_path(crew_office) do %>
           <button data-toggle="tooltip" data-placement="left" title="Editar" class="btn btn-icon waves-effect waves-light btn-warning m-b-5"> <i class="fa fa-wrench"></i></button><% end %>

           <%= link_to crew_office_path(crew_office), :method=>:delete, :class=>:destroy, data: { confirm: 'Tem certeza que deseja apagar?' } do %><button data-toggle="tooltip" data-placement="left" title="Apagar" class="btn btn-icon waves-effect waves-light btn-danger m-b-5 __web-inspector-hide-shortcut__"> <i class="fa fa-remove"></i></button><% end %></td>
         </tr>
         <% end %>
       </tbody>
     </table>

     <br>
     <%= link_to 'Ir para secretariado', crew_secretaries_path, class: 'btn btn-primary' %>
     <%= link_to 'Ir para diretoria', crew_diretories_path, class: 'btn btn-primary' %>
   </div>
 </div>
 <!-- end col -->
</div>