<div class="row">
   <div class="col-sm-12">
      <div class="card-box">
         <div class="dropdown pull-right">
            <%= link_to 'Ver todas', crew_offices_path, class: 'btn btn-primary' %>
         </div>
         <h4 class="header-title m-t-0 m-b-30">Cargos</h4>
         <div class="row">
            <div class="col-md-12">
              <%= form_for @crew_office, url: {action: "create"} do |f| %>
                <% if @crew_office.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(@crew_office.errors.count, "error") %> prohibited this @crew_office from being saved:</h2>

                    <ul>
                    <% @crew_office.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                    </ul>
                  </div>
                <% end %>

                <div class="form-group">
                  <div class="col-md-10">
                  <%= f.label :name do %>
                  <span>Nome</span>
                  <% end %>
                  <%= f.text_field :name, class: "form-control"  %><br><br>
                </div>
                  </div>
                 <div class="form-group">
                  <div class="col-md-10"> 
                <div> Cargo de: </div> <br>
                       <div> 
                          <label>
                          <%= f.radio_button :is_secretary, true %> 
                          O secretariado
                          </label><br><br>
                          <label>
                          <%= f.radio_button :is_secretary, false %> 
                          A diretoria
                          </label><br><br>
                          
                       </div>
                </div>

                </div>
                <div class="form-group m-b-0">
                  <div class="col-md-12">
                  <%= f.submit 'Criar cargo', class: 'btn btn-purple'  %> <br><br>
                </div>
                </div>
              <% end %>
            </div>
            <!-- end col -->
         </div>
         <!-- end row -->
      </div>
   </div>
   <!-- end col -->
</div>
<!-- end row -->