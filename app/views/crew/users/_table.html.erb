<div class="row">
   <div class="col-sm-12">
      <div class="card-box table-responsive">
         <h4 class="header-title m-t-0 m-b-30">Gerenciamento de Usuários</h4>
         <table id="datatable-buttons" class="table table-striped table-bordered">
            <thead>
               <tr>
                  <th>Nome</th>
                  <th>Email</th>
                  <th>Inscrito</th>
                  <th >Cotista</th>
                  <th>Data de Inscr.</th>
                  <th></th>
               </tr>
            </thead>
            <tbody>
                <% @users.each do |user| %>
               <tr>
                  <td><%= user.name.nil? ? 'Não Informado' : user.name.titleize%></td>
                  <td><%= user.email%></td>
                  <td><%= user.comitee_id.nil? ? 'Não cadastrado' : user.comitee.name %></td>
                  <td><%= user.type_user%></td>
                  <td><%= user.created_at.strftime("%d/%m/%Y  %H:%M:%S") %></td>
                  <td>
                    <%= link_to   crew_user_path(user), target: "_blank", method: :get do %><button data-toggle="tooltip" data-placement="left" title="Ver mais" class="btn btn-icon waves-effect waves-light btn-primary m-b-5 __web-inspector-hide-shortcut__"> <i class="fa fa-eye"></i></button><% end %>
                     <%=  link_to  edit_crew_user_path(user) do %>
                     <button data-toggle="tooltip" data-placement="left" title="Editar" class="btn btn-icon waves-effect waves-light btn-warning m-b-5"> <i class="fa fa-wrench"></i></button><% end %>

                     <%= link_to  crew_user_path(user), :method=>:delete, :class=>:destroy ,data: {confirm: "Deseja apagar o usuário #{user.name}?"} do %><button data-toggle="tooltip" data-placement="left" title="Apagar" class="btn btn-icon waves-effect waves-light btn-danger m-b-5 __web-inspector-hide-shortcut__"> <i class="fa fa-remove"></i></button><% end %>
                  </td>
               </tr>
               <% end %>
            </tbody>
         </table>
      </div>
   </div>
   <!-- end col -->
</div>
<!-- end row -->