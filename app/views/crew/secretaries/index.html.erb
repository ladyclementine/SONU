<div class="row">
   <div class="col-md-12">
      <div class="card-box">
         <div class="dropdown pull-right">
                    <%= link_to 'Novo cargo', new_crew_office_path, class: 'btn btn-primary' %>
                      <%= link_to 'Novo conteúdo', new_crew_secretary_path, class: 'btn btn-primary' %>
         </div>
         <h4 class="header-title m-t-0 m-b-30">O secretariado</h4>
            <table  class="table m-0">
            <thead>
               <tr>
                  <th>Cargo</th>
                  <th>Nome</th>
                  <th>Imagem</th>
                  <th >Configurações</th>
               </tr>
            </thead>
            <tbody>
              <% @crew_secretaries.each do |crew_secretary| %>
                <tr>
                  <td><%= crew_secretary.office.name %></td>
                  <td><%= crew_secretary.name %></td>
                  <td><%= image_tag crew_secretary.photo_url(:thumb)unless crew_secretary.photo.blank? %></td>
                  <td><%= link_to  crew_secretary do %><button data-toggle="tooltip" data-placement="left" title="Ver mais" class="btn btn-icon waves-effect waves-light btn-primary m-b-5 __web-inspector-hide-shortcut__"> <i class="fa fa-eye"></i></button><% end %>
                  <%=  link_to edit_crew_secretary_path(crew_secretary) do %>
                      <button data-toggle="tooltip" data-placement="left" title="Editar" class="btn btn-icon waves-effect waves-light btn-warning m-b-5"> <i class="fa fa-wrench"></i></button><% end %>
                      
                  <%= link_to crew_secretary, :method=>:delete, :class=>:destroy do %><button data-toggle="tooltip" data-placement="left" title="Apagar" class="btn btn-icon waves-effect waves-light btn-danger m-b-5 __web-inspector-hide-shortcut__"> <i class="fa fa-remove"></i></button><% end %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <br>


      </div>
   </div>
   <!-- end col -->
</div>
