<div class="row">
   <div class="col-sm-12">
      <div class="card-box">
         <div class="dropdown pull-right">
            <%= link_to 'Ver todas', crew_category_event_index_path , class: 'btn btn-primary'%>
         </div>
         <h4 class="header-title m-t-0 m-b-30">Categorias dos comitês</h4>
         <div class="row">
            <div class="col-md-12">
              <%= form_for((@category_event) ,url: {controller: 'category_event', action: 'update'}, :html => {class: 'form-horizontal'})do |f| %>

                <div class="form-group">
                  <div class="col-md-10">
                  <%= f.label :name do %>
                  <span>Categoria</span>
                  <% end %>
                  <%= f.text_field :name, class: "form-control"  %>
                </div>
                  </div>

                <div class="form-group">
                  <div class="col-md-10">
                   <%= f.label :comitee_id do %>
                   <span class="required">Destinado ao comitê: *</span>
                   <% end %> 
                <%= f.select :comitee_id, Comitee.all.collect { |c| [ c.name, c.id ] }, { include_blank: true } , { class: "form-control" }%>
               </div>
                  </div>

                <div class="form-group m-b-0">
                  <div class="col-md-12">
                  <%= f.submit 'Criar Categoria', class: 'btn btn-purple' %>
                  </div>
                    </div>
              <% end %>
            </div>
            <!-- end col -->
         </div>
         <!-- end row -->
      </div>
   </div>
   <!-- end col -->
</div>
<!-- end row -->