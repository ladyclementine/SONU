<div class="row">
   <div class="col-md-12">
      <div class="card-box">
         <div class="dropdown pull-right">
                        <%= link_to 'Adicionar Conteúdo', new_crew_fortaleza_path,class: 'btn btn-primary' %>
         </div>
         <h4 class="header-title m-t-0 m-b-30">Fortaleza</h4>
            <table  class="table m-0">
            <thead>
               <tr>
                  <th>Título</th>
                  <th>Configurações</th>
               </tr>
            </thead>
            <tbody>
              <% @crew_fortalezas.each do |crew_fortaleza| %>
                <tr>
                  <td><%= crew_fortaleza.title %></td>
                  <td><%= image_tag crew_fortaleza.photo_url(:small)unless crew_fortaleza.photo_url.blank?  %></td>
                  <td><%= link_to   crew_fortaleza do %><button data-toggle="tooltip" data-placement="left" title="Ver mais" class="btn btn-icon waves-effect waves-light btn-primary m-b-5 __web-inspector-hide-shortcut__"> <i class="fa fa-eye"></i></button><% end %>
                     <%=  link_to  edit_crew_fortaleza_path(crew_fortaleza) do %>
                     <button data-toggle="tooltip" data-placement="left" title="Editar" class="btn btn-icon waves-effect waves-light btn-warning m-b-5"> <i class="fa fa-wrench"></i></button><% end %>

                     <%= link_to  crew_fortaleza, :method=>:delete, :class=>:destroy, data: { confirm: 'Tem certeza que deseja apagar?' } do %><button data-toggle="tooltip" data-placement="left" title="Apagar" class="btn btn-icon waves-effect waves-light btn-danger m-b-5 __web-inspector-hide-shortcut__"> <i class="fa fa-remove"></i></button><% end %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <br>

      </div>
   </div>
   <!-- end col -->
</div>