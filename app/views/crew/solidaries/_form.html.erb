<div class="row">
   <div class="col-sm-12">
      <div class="card-box">
         <div class="dropdown pull-right">
            <a href="#" class="dropdown-toggle card-drop" data-toggle="dropdown" aria-expanded="false">
            <i class="zmdi zmdi-more-vert"></i>
            </a>
            <ul class="dropdown-menu" role="menu">
               <li><a href="#">Action</a></li>
               <li><a href="#">Another action</a></li>
               <li><a href="#">Something else here</a></li>
               <li class="divider"></li>
               <li><a href="#">Separated link</a></li>
            </ul>
         </div>
         <h4 class="header-title m-t-0 m-b-30">SONU solidária</h4>
         <div class="row">
            <div class="col-md-12">
              <%= form_for(crew_solidary) do |f| %>
                <% if crew_solidary.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(crew_solidary.errors.count, "error") %> prohibited this crew_solidary from being saved:</h2>

                    <ul>
                    <% crew_solidary.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                    </ul>
                  </div>
                <% end %>

                <div class="form-group">
                  <div class="col-md-10">
                  <%= f.label :title do %>
