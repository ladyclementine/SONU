                </div>
                  </div>

                <div class="form-group">
                  <div class="col-md-10">
                  <%= f.label :description do %>
                  <span>Descrição</span>
                   <% end %>
                  <%= f.text_area :description,  class: "form-control" %><br><br>
                </div>
                  </div>

                <div class="form-group">
                  <div class="col-md-10">
                  <%= f.label :photo do %>
                  <span>Imagem</span>
                   <% end %>
                  <%= f.file_field :photo ,   class: "dropify"  %><br><br>
                </div>  
                  </div>
                <div class="form-group m-b-0">
                  <div class="col-md-12">
                  <%= f.submit 'Criar conteúdo', class: 'btn btn-purple'  %><br><br>
                </div>
                  </div>
              <% end %>
            </div>
            <!-- end col -->
         </div>
