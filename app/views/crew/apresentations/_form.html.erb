<div class="row">
   <div class="col-sm-12">
      <div class="card-box">
         <div class="dropdown pull-right">
            <a href="#" class="dropdown-toggle card-drop" data-toggle="dropdown" aria-expanded="false">
            <i class="zmdi zmdi-more-vert"></i>
            </a>
            <ul class="dropdown-menu" role="menu">
               <li><a href="#">Action</a></li>
               <li><a href="#">Another action</a></li>
               <li><a href="#">Something else here</a></li>
               <li class="divider"></li>
               <li><a href="#">Separated link</a></li>
            </ul>
         </div>
         <h4 class="header-title m-t-0 m-b-30">Carta de Apresentação</h4>
         <div class="row">
            <div class="col-md-12">
               <%= form_for (crew_apresentation), :html => {class: 'form-horizontal'} do |f| %>
               <% if crew_apresentation.errors.any? %>
               <div id="error_explanation">
                  <h2><%= pluralize(crew_apresentation.errors.count, "error") %> prohibited this crew_apresentation from being saved:</h2>
                  <ul>
                     <% crew_apresentation.errors.full_messages.each do |message| %>
                     <li><%= message %></li>
                     <% end %>
                  </ul>
               </div>
               <% end %>
               <div class="form-group">
                  <div class="col-md-10">
                     <%= f.label :title do %>
                     <span>Título</span>
                     <% end %>
                     <%= f.text_field :title, class: "form-control" %>
                  </div>
               </div>
               <div class="form-group">
                  <div class="col-md-10">
                     <%= f.label :description do%>
                     <span>Texto</span>
                     <% end %>
                     <div class="fr-view">
                        <%= f.text_area :description, class: "form-control"%>
                     </div>
                  </div>
               </div>
               <div class="form-group">
                  <div class="col-md-10">
                        <%= f.label :photo do %>
                        <span>Imagem</span>
                        <% end %>
                        <%= f.file_field :photo,   class: "dropify"%><br><br>
                      </div>
                        </div>
               <div class="form-group m-b-0">
                  <div class="col-md-12">
                     <%= f.submit 'Criar Conteúdo', class: 'btn btn-purple'%>
                  </div>
               </div>
               <% end %>
            </div>
            <!-- end col -->
         </div>
         <!-- end row -->
      </div>
   </div>
   <!-- end col -->
</div>
<!-- end row -->