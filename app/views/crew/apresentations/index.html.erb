<div class="row">
   <div class="col-md-12">
      <div class="card-box">
         <div class="dropdown pull-right">
            <a href="#" class="dropdown-toggle card-drop" data-toggle="dropdown" aria-expanded="false">
            <i class="zmdi zmdi-more-vert"></i>
            </a>
            <ul class="dropdown-menu" role="menu">
               <li><a href="#">Action</a></li>
               <li><a href="#">Another action</a></li>
               <li><a href="#">Something else here</a></li>
               <li class="divider"></li>
               <li><a href="#">Separated link</a></li>
            </ul>
         </div>
         <h4 class="header-title m-t-0 m-b-30">Basic example</h4>
         <table  class="table m-0">
            <thead>
               <tr>
                  <th>Título</th>
                  <th>Descrição</th>
                  <th colspan="2">Configurações</th>
               </tr>
            </thead>
            <tbody>
               <% @crew_apresentations.each do |crew_apresentation| %>
               <tr>
                  <td><%= crew_apresentation.title %></td>
                  <td><%= crew_apresentation.description %></td>
                  <td><%= link_to 'Show', crew_apresentation %></td>
                  <td><%= link_to 'Edit', edit_crew_apresentation_path(crew_apresentation) %></td>
                  <td><%= button_to "delete", crew_apresentation, :method=>:delete, :class=>:destroy, class: 'btn btn-danger' %></td>
                  </td>
               </tr>
               <% end %>
            </tbody>
         </table>
         <br>
         <%= link_to 'Adicionar conteúdo', new_crew_apresentation_path %>
         <p>O conteúdo adicionado será posto abaixo do conteúdo que já existe</p>
      </div>
   </div>
   <!-- end col -->
</div>