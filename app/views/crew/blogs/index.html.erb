<div class="row">
   <div class="col-md-12">
      <div class="card-box">
         <div class="dropdown pull-right">
            
          <%= link_to 'Nova notícia', new_crew_blog_path , class: 'btn btn-primary'%>
         </div>
         <h4 class="header-title m-t-0 m-b-30">Notícias</h4>
         <table  class="table m-0">
            <thead>
              <tr>
                <th>Título</th>
                <th>Criado em</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @crew_blogs.each do |crew_blog| %>
                <tr>
                  <td><%= crew_blog.title %></td>
                  <td><%= crew_blog.created_at.strftime("%d/%m/%Y") %></td>
                  <td><%= link_to   crew_blog do %><button data-toggle="tooltip" data-placement="left" title="Ver mais" class="btn btn-icon waves-effect waves-light btn-primary m-b-5 __web-inspector-hide-shortcut__"> <i class="fa fa-eye"></i></button><% end %>
                 <%=  link_to  edit_crew_blog_path(crew_blog) do %>
                 <button data-toggle="tooltip" data-placement="left" title="Editar" class="btn btn-icon waves-effect waves-light btn-warning m-b-5"> <i class="fa fa-wrench"></i></button><% end %>

                 <%= link_to crew_blog, :method=>:delete, :class=>:destroy, data: { confirm: 'Tem certeza que deseja apagar?' } do %><button data-toggle="tooltip" data-placement="left" title="Apagar" class="btn btn-icon waves-effect waves-light btn-danger m-b-5 __web-inspector-hide-shortcut__"> <i class="fa fa-remove"></i></button><% end %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <br>

      </div>
   </div>
   <!-- end col -->
</div>