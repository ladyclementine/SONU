<div class="row">
   <div class="col-md-12">
      <div class="card-box">
         <div class="dropdown pull-right">
            <a href="#" class="dropdown-toggle card-drop" data-toggle="dropdown" aria-expanded="false">
            <i class="zmdi zmdi-more-vert"></i>
            </a>
            <ul class="dropdown-menu" role="menu">
               <li><a href="#">Action</a></li>
               <li><a href="#">Another action</a></li>
               <li><a href="#">Something else here</a></li>
               <li class="divider"></li>
               <li><a href="#">Separated link</a></li>
            </ul>
         </div>
         <h4 class="header-title m-t-0 m-b-30">Notícias</h4>
         <table  class="table m-0">
            <thead>
              <tr>
                <th>Título</th>
                <th>Introdução</th>
                <th>Criado em</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @crew_blogs.each do |crew_blog| %>
                <tr>
                  <td><%= crew_blog.title %></td>
                  <td><%= crew_blog.introdution %></td>
                  <td><%= crew_blog.created_at.strftime("%d/%m/%Y") %></td>
                  <td><%= link_to 'Show', crew_blog,  class: 'btn btn-success'%></td>
                  <td><%= link_to 'Edit', edit_crew_blog_path(crew_blog), class: 'btn btn-warning'%></td>
                  <td><%= button_to "delete", crew_blog, :method=>:delete, :class=>:destroy, class: 'btn btn-danger' %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <br>

          <%= link_to 'Nova notícia', new_crew_blog_path , class: 'btn btn-primary'%>
      </div>
   </div>
   <!-- end col -->
</div>